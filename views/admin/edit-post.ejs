<h1 style="text-align:center">Edit post</h1>
<form action="/delete-post/<%= data._id %>?_method=DELETE" method="post">
    <input type="submit" value="delete" class="btn">
</form>

<form action="/post/edit-post/<%= data._id %>?_method=PUT" method="post">
    <label for="title"><b>Blog title</b></label>
    <input type="text" name="title" id="title"  value=<%= data.title   %>>
    <label for="body"><b>Blog body</b></label>
    <textarea name="body" id="body" cols="50" rows="10"><%= data.body %></textarea>
    <label for="image">Add Image Url</label>
    <input type="text" name="imageUrl" id="image" placeholder="Add Image Url" value=<%= data.imageUrl %>>

    <input type="submit" value="update" class="btn">

</form>